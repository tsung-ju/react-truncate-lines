{
  "compilerOptions": {
    "outDir": "lib",

    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "lib": ["dom", "es5"],
    "jsx": "react-jsx",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
